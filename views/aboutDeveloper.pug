extends layout

//- 직원 관리 페이지(경영진)
block content
    h2.text-center.mt-3 직원 관리(조회)
    form(action="/aboutDeveloper" method='post')
        table.table.text-center(width="700" border="1")
            thead
                tr
                    th(scope="col") Id
                    th(scope="col") 이름
                    th(scope="col") 경력
                    th(scope="col") 프로젝트 이름
                    th(scope="col") 직무
                    th(scope="col") 투입 일자
                    th(scope="col") 방출 일자
                    th(scope="col") 경험한 기술
            tbody
                each value in developers
                    tr
                        td=value[0]
                        td=value[1]
                        td #{moment.duration(moment(new Date()).diff(value[2])).asMonths().toFixed(2)}개월
                        td=value[3]
                        td=value[4]
                        td=moment(value[5]).format('YYYY-MM-DD')
                        td=moment(value[6]).format('YYYY-MM-DD')
                        td=value[7]
