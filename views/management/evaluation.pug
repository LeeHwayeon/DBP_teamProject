extends ../layout

//- 평가조회
block content
    .container
        h3 평가조회
        br
        p.peer-evaluation
            | 동료
        p.project-name 프로젝트 이름
        hr
        .col.text-center
            -for(let i = 0; i < projects.length; i++) {
                a(href=`/management/peerEvaluationDetail/${projects[i][0]}`)
                    p #{projects[i][1]}
            -}

        p.pm-evaluation
            | PM 평가
        p.project-name 프로젝트 이름
        hr
        .col.text-center
            -for(let i = 0; i < pms.length; i++) {
                a(href=`/management/pmEvaluationDetail/${pms[i][0]}`)
                    p #{pms[i][1]}
            -}

        p.customer-evaluation
            | 고객 평가
        p.project-name 프로젝트 이름
        hr
        .col.text-center
            -for(let i = 0; i < customers.length; i++) {
                a(href=`/management/customerEvaluationDetail/${customers[i][0]}`)
                    p #{customers[i][1]}
            -}
