extends ../layout

//- 프로젝트 인원 투입,방출 페이지 : 프로젝트 선택, 개발자 선택
//- 진행중인 프로젝트의 프로젝트 인원의 투입,방출일자만 수정가능
//- 날짜를 입력하고 수정
block content
  form(action="/management/appointToModify", method="post")
    .row.mt-3
      .col.text-center
        h2 투입,방출일자 수정
    .row.align-items-center.mt-4
      .col
        h3.mb-3.ml-3 프로젝트 선택
        table.table
          thead
            tr
              th(scope="col") 
              th(scope="col") 프로젝트명
              th(scope="col") 착수일자
              th(scope="col") 종료일자
              th(scope="col") 발주처
          tbody
            each p in projects
              tr
                td
                  input(type="radio" name="prj" value=`${p[0]}`)
                th(scope="row")= p[1]
                td #{moment(p[2]).format('YYYY-MM-DD')}
                td #{moment(p[3]).format('YYYY-MM-DD')}
                td= p[4]
    .row.justify-content-start.mt-4
      .col(style="margin-bottom: 1em")
        button.btn.btn-dark.mr-3(type="submit", style="float: right") Select Developer